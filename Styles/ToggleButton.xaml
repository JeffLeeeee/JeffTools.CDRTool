<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  置顶 ToggleButton 美化样式  -->
    <Style x:Key="AlwaystopToggleButtonStyle" TargetType="ToggleButton">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderBrush" Value="#D1D8E6" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="ToolTip" Value="窗口置顶" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Grid>
                        <!--  背景  -->
                        <Border
                            x:Name="SwitchBackground"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}" />
                        <!--  图标  -->
                        <Viewbox
                            Width="18"
                            Height="18"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                            <Canvas Width="24" Height="24">
                                <!--  置顶图标（可自定义为你喜欢的样式）  -->
                                <Path
                                    Data="M12,2 L12,22 M5,9 L12,2 L19,9"
                                    Fill="Transparent"
                                    Stroke="{TemplateBinding Foreground}"
                                    StrokeEndLineCap="Round"
                                    StrokeLineJoin="Round"
                                    StrokeStartLineCap="Round"
                                    StrokeThickness="2" />
                            </Canvas>
                        </Viewbox>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!--  选中状态  -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="SwitchBackground" Property="Background" Value="#AAFFFFFF" />
                            <Setter TargetName="SwitchBackground" Property="BorderBrush" Value="#2563B3" />
                            <Setter Property="Foreground" Value="#2563B3" />
                        </Trigger>
                        <!--  悬浮状态  -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="SwitchBackground" Property="Background" Value="#AAFFFFFF" />
                            <Setter Property="Foreground" Value="#2563B3" />
                        </Trigger>
                        <!--  按下状态  -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="SwitchBackground" Property="Background" Value="#AAFFFFFF" />
                            <Setter Property="Foreground" Value="#2563B3" />
                        </Trigger>
                        <!--  禁用状态  -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="SwitchBackground" Property="Background" Value="#EEE" />
                            <Setter TargetName="SwitchBackground" Property="BorderBrush" Value="#CCC" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>