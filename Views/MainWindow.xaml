<Window
    x:Class="JeffTools.CDRTool.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cc="[cc ]clr-namespace:JeffTools.CDRTool.Common"
    xmlns:converters="clr-namespace:JeffTools.CDRTool.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JeffTools.CDRTool"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:viewmodels="clr-namespace:JeffTools.CDRTool.ViewModels"
    Title="{Binding Title}"
    Width="400"
    Height="800"
    MinWidth="400"
    MinHeight="600"
    MaxWidth="400"
    d:DataContext="{d:DesignInstance viewmodels:MainWindowViewModel,
                                     IsDesignTimeCreatable=True}"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="CanResizeWithGrip"
    Topmost="{Binding ElementName=TopMostTg, Path=IsChecked}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:BooleanToVisibility2Converter x:Key="BooleanToVisibility2Converter" />
        <converters:ShapeTypeToStringConverters x:Key="ShapeTypeToStringConverters" />

    </Window.Resources>
    <Border Background="Transparent" CornerRadius="5">

        <Border
            Background="White"
            BorderBrush="#2563B3"
            BorderThickness="1"
            CornerRadius="5">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border
                    Background="#2563B3"
                    CornerRadius="5,5,0,0"
                    MouseLeftButtonDown="DragMove">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition Width="40" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" />
                        <ToggleButton
                            x:Name="TopMostTg"
                            Grid.Column="2"
                            Content="&#xe67e;"
                            FontFamily="{StaticResource IconFont}"
                            Style="{StaticResource AlwaystopToggleButtonStyle}" />
                        <Button
                            Grid.Column="3"
                            Click="MinimizeWindow"
                            Content="&#xe621;"
                            FontFamily="{StaticResource IconFont}"
                            FontSize="30"
                            Style="{StaticResource MiniButtonStyle}" />
                        <Button
                            Grid.Column="4"
                            Click="CloseWindow"
                            Content="&#xe615;"
                            FontFamily="{StaticResource IconFont}"
                            FontSize="30"
                            Style="{StaticResource CloseButtonStyle}" />
                    </Grid>
                </Border>

                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="{Binding IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock
                        Margin="0,10"
                        FontSize="16"
                        Text="CorelDraw 2022已关闭，等待打开中..." />
                    <Button
                        Height="30"
                        Background="#2563B3"
                        Command="{Binding RefreshCommand}"
                        Content="刷    新"
                        FontSize="16"
                        Style="{StaticResource CustomButtonStyle}" />
                </StackPanel>
                <TabControl Grid.Row="1" Visibility="{Binding IsRunning, Converter={StaticResource BooleanToVisibility2Converter}}">
                    <TabItem Header="首页">
                        <StackPanel Margin="10">
                            <StackPanel IsEnabled="{Binding IsRunning}">
                                <TextBlock
                                    Margin="0,20,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="24"
                                    Text="欢迎使用JeffTools CDR工具" />
                                <TextBlock
                                    Margin="0,20"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="18"
                                    Foreground="Gray"
                                    Text="尽情享用吧。" />
                                <Border
                                    Margin="10"
                                    Padding="10,20"
                                    BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock
                                            Margin="0,5"
                                            VerticalAlignment="Center"
                                            Text="CorelDraw程序信息："
                                            TextWrapping="WrapWithOverflow" />
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="40" />
                                            </Grid.RowDefinitions>
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Foreground="Gray"
                                                Text="版本："
                                                TextWrapping="WrapWithOverflow" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Grid.ColumnSpan="2"
                                                Margin="5,0,5,0"
                                                VerticalAlignment="Center"
                                                FontSize="18"
                                                Foreground="Gray"
                                                Text="{Binding CdrVersion}"
                                                ToolTip="{Binding CdrVersion}" />
                                        </Grid>
                                        <TextBlock
                                            Margin="0,5"
                                            VerticalAlignment="Center"
                                            Text="设置temp文件夹："
                                            TextWrapping="WrapWithOverflow" />
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="40" />
                                            </Grid.RowDefinitions>
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Foreground="Gray"
                                                Text="文件夹："
                                                TextWrapping="WrapWithOverflow" />
                                            <TextBox
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Margin="5"
                                                VerticalContentAlignment="Center"
                                                FontSize="16"
                                                Text="{Binding TempPath}"
                                                ToolTip="{Binding TempPath}" />
                                            <Button
                                                Grid.Row="0"
                                                Grid.Column="2"
                                                Width="30"
                                                Height="30"
                                                Background="#2563B3"
                                                Command="{Binding OpenFolderCommand}"
                                                Content="&#xe710;"
                                                FontFamily="{StaticResource IconFont}"
                                                Style="{StaticResource CustomButtonStyle}" />
                                        </Grid>
                                    </StackPanel>
                                </Border>
                                <TextBlock
                                    Margin="0,20,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Foreground="Gray"
                                    Text="本工具提供，素材管理，二维码生成工具，冲孔工具，文字工具，图表工具，一键导线框。更多功能还在开发中。"
                                    TextWrapping="WrapWithOverflow" />
                            </StackPanel>

                        </StackPanel>
                    </TabItem>

                    <TabItem Header="二维码" IsEnabled="{Binding IsRunning}">
                        <StackPanel Margin="10" IsEnabled="False">
                            <Border
                                Width="160"
                                Height="160"
                                Margin="5"
                                BorderBrush="Gray"
                                BorderThickness="1">
                                <Image Width="160" Height="160" />
                            </Border>
                            <TextBox Margin="5" Text="Content" />
                            <Button
                                Margin="5"
                                Background="#2563B3"
                                BorderThickness="0"
                                Content="导入到CDR"
                                Style="{StaticResource CustomButtonStyle}" />

                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Foreground="Gray"
                                Text="提示：文本框中输入想要生成的内容，二维码会自动生成；可以选择导入到CDR。"
                                TextWrapping="WrapWithOverflow" />
                            <StackPanel>
                                <TextBlock
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Text="批量生成二维码："
                                    TextWrapping="WrapWithOverflow" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="40" />
                                        <RowDefinition Height="40" />
                                        <RowDefinition Height="40" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Margin="5"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Foreground="Gray"
                                        Text="文件："
                                        TextWrapping="WrapWithOverflow" />
                                    <TextBox
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Margin="5"
                                        IsEnabled="False" />
                                    <Button
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Width="30"
                                        Height="30"
                                        Background="#2563B3"
                                        Content="&#xe710;"
                                        FontFamily="{StaticResource IconFont}"
                                        Style="{StaticResource CustomButtonStyle}" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Margin="5"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Foreground="Gray"
                                        Text="保存路径："
                                        TextWrapping="WrapWithOverflow" />
                                    <TextBox
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="5"
                                        IsEnabled="False" />
                                    <Button
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        Width="30"
                                        Height="30"
                                        Background="#2563B3"
                                        Content="&#xe710;"
                                        FontFamily="{StaticResource IconFont}"
                                        Style="{StaticResource CustomButtonStyle}" />
                                    <Button
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Grid.ColumnSpan="2"
                                        Height="30"
                                        Background="#2563B3"
                                        Content="生成"
                                        Style="{StaticResource CustomButtonStyle}" />

                                </Grid>
                                <TextBlock
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Foreground="Gray"
                                    Text="提示：选择txt、csv、xls文件。txt文件用换行。"
                                    TextWrapping="WrapWithOverflow" />
                            </StackPanel>

                        </StackPanel>
                    </TabItem>
                    <TabItem
                        Height="35"
                        VerticalAlignment="Top"
                        Header="冲孔"
                        IsEnabled="{Binding IsRunning}">
                        <StackPanel>
                            <Expander
                                Margin="10,5,10,0"
                                BorderBrush="#2563B3"
                                Foreground="White"
                                Header="渐变冲孔"
                                Style="{StaticResource ExpanderStyle1}">
                                <StackPanel Margin="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="80" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="80" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <!--#region 参数-->
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Margin="2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Foreground="Black"
                                            Text="形状：" />
                                        <ComboBox
                                            x:Name="ShapeCB"
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="2,2,2,0"
                                            VerticalAlignment="Top"
                                            ItemsSource="{Binding ShapeTypes, Converter={StaticResource ShapeTypeToStringConverters}, Mode=OneWay}"
                                            SelectedIndex="{Binding SelectedIndex}"
                                            Style="{DynamicResource ComboBoxStyle}" />
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="2"
                                            Margin="2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Foreground="Black"
                                            Text="间距：" />
                                        <TextBox
                                            x:Name="GapTB"
                                            Grid.Row="0"
                                            Grid.Column="3"
                                            Margin="2"
                                            VerticalAlignment="Center"
                                            Text="{Binding Gap}" />
                                        <!--#endregion-->
                                        <!--#region 行列-->
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Margin="2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Foreground="Black"
                                            Text="行：" />
                                        <TextBox
                                            x:Name="RowTB"
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Margin="2"
                                            VerticalAlignment="Center"
                                            Text="{Binding Row}" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="2"
                                            Margin="2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Foreground="Black"
                                            Text="列：" />
                                        <TextBox
                                            x:Name="ColumnTB"
                                            Grid.Row="1"
                                            Grid.Column="3"
                                            Margin="2"
                                            VerticalAlignment="Center"
                                            Text="{Binding Column}" />
                                        <!--#endregion-->
                                        <!--#region 圆形-->
                                        <TextBlock
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Margin="2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Foreground="Black"
                                            Text="半径：" />
                                        <TextBox
                                            x:Name="RadiusTB"
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Margin="2"
                                            VerticalAlignment="Center"
                                            Text="{Binding Radius}" />
                                        <TextBlock
                                            Grid.Row="2"
                                            Grid.Column="2"
                                            Margin="2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Foreground="Black"
                                            Text="最小半径：" />
                                        <TextBox
                                            x:Name="MinRadiusTB"
                                            Grid.Row="2"
                                            Grid.Column="3"
                                            Margin="2"
                                            VerticalAlignment="Center"
                                            Text="{Binding MinRadius}" />
                                        <!--#endregion-->
                                        <!--#region 矩形-->
                                        <TextBlock
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            Margin="2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Foreground="Black"
                                            Text="宽度：" />
                                        <TextBox
                                            x:Name="WidthTB"
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            Margin="2"
                                            VerticalAlignment="Center"
                                            Text="{Binding Width}" />
                                        <TextBlock
                                            Grid.Row="3"
                                            Grid.Column="2"
                                            Margin="2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Foreground="Black"
                                            Text="最小宽度：" />
                                        <TextBox
                                            x:Name="MinWidthTB"
                                            Grid.Row="3"
                                            Grid.Column="3"
                                            Margin="2"
                                            VerticalAlignment="Center"
                                            Text="{Binding MinWidth}" />
                                        <!--#endregion-->
                                    </Grid>
                                    <Button
                                        Margin="10"
                                        Background="#2563B3"
                                        Command="{Binding CreateShapeCommand}"
                                        Content="生成"
                                        Style="{StaticResource CustomButtonStyle}" />
                                    <TextBlock
                                        Margin="10"
                                        FontSize="14"
                                        Foreground="Gray"
                                        Text="提示：除圆形外使用半径参数外，其他的都是使用宽度；最小数值是用来做渐变的。"
                                        TextWrapping="WrapWithOverflow" />
                                </StackPanel>
                            </Expander>
                            <Expander
                                Margin="10,5,10,0"
                                BorderBrush="#2563B3"
                                Foreground="White"
                                Header="图片冲孔"
                                Style="{StaticResource ExpanderStyle1}">
                                <StackPanel Margin="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="40" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="40" />
                                            <RowDefinition Height="40" />
                                        </Grid.RowDefinitions>
                                        <TextBlock
                                            Margin="5"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Foreground="Gray"
                                            Text="图片："
                                            TextWrapping="WrapWithOverflow" />
                                        <TextBox
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="5"
                                            Text="{Binding ImagePath}"
                                            ToolTip="{Binding ImagePath}" />
                                        <Button
                                            Grid.Row="0"
                                            Grid.Column="2"
                                            Width="30"
                                            Height="30"
                                            Background="#2563B3"
                                            Command="{Binding OpenImageFileCommand}"
                                            Content="&#xe710;"
                                            FontFamily="{StaticResource IconFont}"
                                            Style="{StaticResource CustomButtonStyle}" />

                                        <Border
                                            Grid.Row="1"
                                            Grid.ColumnSpan="3"
                                            Height="200"
                                            Margin="5"
                                            BorderBrush="#2563B3"
                                            BorderThickness="1">
                                            <Image Source="{Binding ImagePath}" />
                                        </Border>
                                        <Grid
                                            Grid.Row="2"
                                            Grid.ColumnSpan="3"
                                            VerticalAlignment="Center">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="60" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Margin="2"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Foreground="Black"
                                                Text="分块：" />
                                            <TextBox
                                                Grid.Column="1"
                                                Margin="2"
                                                VerticalAlignment="Center"
                                                FontSize="18"
                                                Text="{Binding Blocks}"
                                                TextAlignment="Center" />
                                            <CheckBox
                                                Grid.Column="2"
                                                Margin="2"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                Content="反色"
                                                IsChecked="{Binding IsRevert}"
                                                IsEnabled="{Binding IsChecked, ElementName=GrayCB}" />
                                            <CheckBox
                                                x:Name="GrayCB"
                                                Grid.Column="3"
                                                Margin="2"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                Content="灰度"
                                                IsChecked="{Binding IsGray}"
                                                IsEnabled="True" />
                                        </Grid>
                                        <UniformGrid
                                            Grid.Row="3"
                                            Grid.ColumnSpan="3"
                                            Columns="2">
                                            <Button
                                                Height="30"
                                                Margin="5"
                                                Background="#2563B3"
                                                Command="{Binding CreateImageShapeCommand}"
                                                Content="生成"
                                                Style="{StaticResource CustomButtonStyle}" />
                                            <Button
                                                Height="30"
                                                Margin="5"
                                                Background="#2563B3"
                                                Command="{Binding CreateSelectShapeCommand}"
                                                Content="选定生成"
                                                Style="{StaticResource CustomButtonStyle}" />
                                        </UniformGrid>

                                    </Grid>
                                    <TextBlock
                                        Margin="10"
                                        FontSize="14"
                                        Foreground="Gray"
                                        Text="提示：分块是用来调整精度的；选定CDR图形选择选定生成。"
                                        TextWrapping="WrapWithOverflow" />
                                </StackPanel>
                            </Expander>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="文字工具" IsEnabled="{Binding IsRunning}">
                        <StackPanel Margin="10">
                            <Border
                                Padding="10"
                                BorderBrush="#2562B3"
                                BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Button
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="5"
                                        Background="#2563B3"
                                        Command="{Binding ConvertToCurvesCommand}"
                                        Content="文字转曲"
                                        Style="{StaticResource CustomButtonStyle}" />
                                </Grid>
                            </Border>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="常用工具" IsEnabled="{Binding IsRunning}">
                        <StackPanel Margin="10">
                            <Border
                                Padding="10"
                                BorderBrush="#2562B3"
                                BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="80" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="2"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Foreground="Black"
                                        Text="宽度：" />
                                    <TextBox
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Margin="2"
                                        VerticalAlignment="Center"
                                        IsEnabled="{Binding IsChecked, ElementName=OriginCheckBox}"
                                        Text="{Binding RectWidth}" />

                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Margin="2"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Foreground="Black"
                                        Text="高度：" />
                                    <TextBox
                                        Grid.Row="0"
                                        Grid.Column="3"
                                        Margin="2"
                                        VerticalAlignment="Center"
                                        IsEnabled="{Binding IsChecked, ElementName=OriginCheckBox}"
                                        Text="{Binding RectHeight}" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Margin="2"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Foreground="Black"
                                        Text="圆角：" />
                                    <StackPanel
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Grid.ColumnSpan="3"
                                        Orientation="Horizontal">
                                        <TextBox
                                            Width="40"
                                            Margin="2"
                                            VerticalAlignment="Center"
                                            Text="{Binding RadiusUL}"
                                            ToolTip="左上" />
                                        <TextBox
                                            Width="40"
                                            Margin="2"
                                            VerticalAlignment="Center"
                                            Text="{Binding RadiusUR}"
                                            ToolTip="右上" />
                                        <TextBox
                                            Width="40"
                                            Margin="2"
                                            VerticalAlignment="Center"
                                            Text="{Binding RadiusLR}"
                                            ToolTip="右下" />
                                        <TextBox
                                            Width="40"
                                            Margin="2"
                                            VerticalAlignment="Center"
                                            Text="{Binding RadiusLL}"
                                            ToolTip="左下" />
                                    </StackPanel>
                                    <CheckBox
                                        x:Name="OriginCheckBox"
                                        Grid.Row="2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Content="重设尺寸"
                                        FontSize="16"
                                        IsChecked="{Binding IsResize}" />
                                    <Button
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Grid.ColumnSpan="3"
                                        Margin="10"
                                        Background="#2563B3"
                                        Command="{Binding AddRectangleCommand}"
                                        Content="加框"
                                        Style="{StaticResource CustomButtonStyle}" />
                                </Grid>
                            </Border>

                        </StackPanel>
                    </TabItem>
                    <TabItem Header="素材管理" IsEnabled="{Binding IsRunning}">
                        <StackPanel Margin="10" VerticalAlignment="Center">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="24"
                                Text="功能开发中。。。" />
                        </StackPanel>
                    </TabItem>


                </TabControl>
            </Grid>
        </Border>
    </Border>
</Window>
