<Window
    x:Class="JeffTools.CDRTool.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:JeffTools.CDRTool.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JeffTools.CDRTool"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:JeffTools.CDRTool.ViewModels"
    xmlns:cc ="clr-namespace:JeffTools.CDRTool.Common"
    xmlns:sys="clr-namespace:System;assembly=mscorlib" 
    Title="{Binding Title}"
    Width="400"
    Height="600"
    MinWidth="400"
    MinHeight="600"
    d:DataContext="{d:DesignInstance viewmodels:MainWindowViewModel,
                                     IsDesignTimeCreatable=True}"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="CanResizeWithGrip"
    Topmost="{Binding ElementName=TopMostTg, Path=IsChecked}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:BooleanToVisibility2Converter x:Key="BooleanToVisibility2Converter" />
        <converters:ShapeTypeToStringConverters x:Key="ShapeTypeToStringConverters" />
       
    </Window.Resources>
    <Border Background="Transparent" CornerRadius="5">

        <Border
            Background="White"
            BorderBrush="#2563B3"
            BorderThickness="1"
            CornerRadius="5">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border
                    Background="#2563B3"
                    CornerRadius="5,5,0,0"
                    MouseLeftButtonDown="DragMove">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition Width="40" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" />
                        <ToggleButton
                            x:Name="TopMostTg"
                            Grid.Column="2"
                            Content="&#xe67e;"
                            FontFamily="{StaticResource IconFont}"
                            Style="{StaticResource AlwaystopToggleButtonStyle}" />
                        <Button
                            Grid.Column="3"
                            Click="MinimizeWindow"
                            Content="&#xe621;"
                            FontFamily="{StaticResource IconFont}"
                            FontSize="30"
                            Style="{StaticResource MiniButtonStyle}" />
                        <Button
                            Grid.Column="4"
                            Click="CloseWindow"
                            Content="&#xe615;"
                            FontFamily="{StaticResource IconFont}"
                            FontSize="30"
                            Style="{StaticResource CloseButtonStyle}" />
                    </Grid>
                </Border>

                <StackPanel 
                    Visibility="{Binding IsRunning,Converter={StaticResource  BooleanToVisibilityConverter}}" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock FontSize="16" Text="CorelDraw 2017已关闭，等待打开中..." Margin="0,10"/>
                    <Button Style="{StaticResource CustomButtonStyle}" FontSize="16" Height="30" Background="#2563B3" Content="刷    新" Command="{Binding RefreshCommand}"/>
                </StackPanel>
                <TabControl Visibility="{Binding IsRunning,Converter={StaticResource  BooleanToVisibility2Converter}}" Grid.Row="1">
                    <TabItem Header="首页">
                        <StackPanel Margin="10">
                            <StackPanel IsEnabled="{Binding IsRunning}">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="24"
                                    Text="欢迎使用JeffTools CDR工具" />
                                <TextBlock
                                    Margin="0,20"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="18"
                                    Foreground="Gray"
                                    Text="尽情享用吧。" />
                                <Border
                                    Margin="10"
                                    Padding="10,20"
                                    Background="#FF5F85B7"
                                    BorderBrush="#2563B3"
                                    BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock
                                            Margin="0,5"
                                            VerticalAlignment="Center"
                                            Foreground="White"
                                            Text="CorelDraw程序信息："
                                            TextWrapping="WrapWithOverflow" />
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="40" />
                                            </Grid.RowDefinitions>
                                            <TextBlock
                                                Margin="5"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Foreground="White"
                                                Text="版本："
                                                TextWrapping="WrapWithOverflow" />
                                            <TextBlock
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Margin="5"
                                                VerticalAlignment="Center"
                                                FontSize="18"
                                                Foreground="White"
                                                Text="{Binding CdrVersion}"
                                                ToolTip="{Binding CdrVersion}" />
                                        </Grid>
                                        <TextBlock
                                            Margin="0,5"
                                            VerticalAlignment="Center"
                                            Foreground="White"
                                            Text="设置temp文件夹："
                                            TextWrapping="WrapWithOverflow" />
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="40" />
                                            </Grid.RowDefinitions>
                                            <TextBlock
                                                Margin="5"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Foreground="White"
                                                Text="文件夹："
                                                TextWrapping="WrapWithOverflow" />
                                            <TextBox
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Margin="5"
                                                VerticalContentAlignment="Center"
                                                FontSize="16"
                                                Foreground="#2563B3"
                                                Text="{Binding TempPath}"
                                                ToolTip="{Binding TempPath}" />
                                            <Button
                                                Grid.Row="0"
                                                Grid.Column="2"
                                                Width="30"
                                                Height="30"
                                                Background="#22FFFFFF"
                                                Command="{Binding OpenFolderCommand}"
                                                Content="&#xe710;"
                                                FontFamily="{StaticResource IconFont}"
                                                Style="{StaticResource CustomButtonStyle}" />
                                        </Grid>
                                    </StackPanel>
                                </Border>
                                <TextBlock
                                    Margin="0,20,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Foreground="Gray"
                                    Text="本工具提供，素材管理，二维码生成工具，冲孔工具，文字工具。更多功能还在开发中。"
                                    TextWrapping="WrapWithOverflow" />
                            </StackPanel>

                        </StackPanel>
                    </TabItem>

                    <TabItem Header="二维码" IsEnabled="{Binding IsRunning}">
                        <StackPanel Margin="10">
                            <Border
                                Width="160"
                                Height="160"
                                Margin="5"
                                BorderBrush="Gray"
                                BorderThickness="1">
                                <Image Width="160" Height="160" />
                            </Border>
                            <TextBox Margin="5" Text="Content" />
                            <Button
                                Margin="5"
                                Background="#2563B3"
                                BorderThickness="0"
                                Content="导入到CDR"
                                Style="{StaticResource CustomButtonStyle}" />

                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Foreground="Gray"
                                Text="提示：文本框中输入想要生成的内容，二维码会自动生成；可以选择导入到CDR。"
                                TextWrapping="WrapWithOverflow" />
                            <StackPanel>
                                <TextBlock
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Text="批量生成二维码："
                                    TextWrapping="WrapWithOverflow" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="40" />
                                        <RowDefinition Height="40" />
                                        <RowDefinition Height="40" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Margin="5"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Foreground="Gray"
                                        Text="文件："
                                        TextWrapping="WrapWithOverflow" />
                                    <TextBox
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Margin="5"
                                        IsEnabled="False" />
                                    <Button
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Width="30"
                                        Height="30"
                                        Background="#2563B3"
                                        Content="&#xe710;"
                                        FontFamily="{StaticResource IconFont}"
                                        Style="{StaticResource CustomButtonStyle}" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Margin="5"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Foreground="Gray"
                                        Text="保存路径："
                                        TextWrapping="WrapWithOverflow" />
                                    <TextBox
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="5"
                                        IsEnabled="False" />
                                    <Button
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        Width="30"
                                        Height="30"
                                        Background="#2563B3"
                                        Content="&#xe710;"
                                        FontFamily="{StaticResource IconFont}"
                                        Style="{StaticResource CustomButtonStyle}" />
                                    <Button
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Grid.ColumnSpan="2"
                                        Height="30"
                                        Background="#2563B3"
                                        Content="生成"
                                        Style="{StaticResource CustomButtonStyle}" />

                                </Grid>
                                <TextBlock
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Foreground="Gray"
                                    Text="提示：选择txt、csv、xls文件。txt文件用换行。"
                                    TextWrapping="WrapWithOverflow" />
                            </StackPanel>

                        </StackPanel>
                    </TabItem>
                    <TabItem Header="冲孔" IsEnabled="{Binding IsRunning}">
                        <StackPanel>
                            <Expander
                                Background="#FF7DA3D4"
                                Foreground="White"
                                Header="渐变填充"
                                Style="{StaticResource ExpanderStyle1}">
                                <StackPanel Margin="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="80" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="80" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <!--#region 参数-->
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Margin="2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Text="形状：" />
                                        <ComboBox
                                            x:Name="ShapeCB"
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="2" SelectedIndex="{Binding SelectedShapeType}"
                                            VerticalAlignment="Center" ItemsSource="{Binding ShapeTypes,Converter={StaticResource ShapeTypeToStringConverters},Mode=OneWay}">
                                        </ComboBox>
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="2"
                                            Margin="2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Text="间距：" />
                                        <TextBox
                                            x:Name="GapTB"
                                            Grid.Row="0"
                                            Grid.Column="3"
                                            Margin="2"
                                            VerticalAlignment="Center"
                                            Text="{Binding Gap}" />
                                        <!--#endregion-->
                                        <!--#region 行列-->
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Margin="2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Text="行：" />
                                        <TextBox
                                            x:Name="RowTB"
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Margin="2"
                                            VerticalAlignment="Center"
                                            Text="{Binding Row}" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="2"
                                            Margin="2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Text="列：" />
                                        <TextBox
                                            x:Name="ColumnTB"
                                            Grid.Row="1"
                                            Grid.Column="3"
                                            Margin="2"
                                            VerticalAlignment="Center"
                                            Text="{Binding Column}" />
                                        <!--#endregion-->
                                        <!--#region 圆形-->
                                        <TextBlock
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Margin="2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Text="半径：" />
                                        <TextBox
                                            x:Name="RadiusTB"
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Margin="2"
                                            VerticalAlignment="Center"
                                            Text="{Binding Radius}" />
                                        <TextBlock
                                            Grid.Row="2"
                                            Grid.Column="2"
                                            Margin="2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Text="最小半径：" />
                                        <TextBox
                                            x:Name="MinRadiusTB"
                                            Grid.Row="2"
                                            Grid.Column="3"
                                            Margin="2"
                                            VerticalAlignment="Center"
                                            Text="{Binding MinRadius}" />
                                        <!--#endregion-->
                                        <!--#region 矩形-->
                                        <TextBlock
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            Margin="2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Text="宽度：" />
                                        <TextBox
                                            x:Name="WidthTB"
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            Margin="2"
                                            VerticalAlignment="Center"
                                            Text="{Binding Width}" />
                                        <TextBlock
                                            Grid.Row="3"
                                            Grid.Column="2"
                                            Margin="2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Text="最小宽度：" />
                                        <TextBox
                                            x:Name="MinWidthTB"
                                            Grid.Row="3"
                                            Grid.Column="3"
                                            Margin="2"
                                            VerticalAlignment="Center"
                                            Text="{Binding MinWidth}" />
                                        <!--#endregion-->
                                    </Grid>
                                    <Button
                                        Margin="0,5"
                                        Background="#2563B3" Command="{Binding CreateShapeCommand}"
                                        Content="生成"
                                        Style="{StaticResource CustomButtonStyle}" />
                                </StackPanel>
                            </Expander>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="素材管理" IsEnabled="{Binding IsRunning}">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="24"
                                Text="功能开发中。。。" />
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </Grid>
        </Border>
    </Border>
</Window>
